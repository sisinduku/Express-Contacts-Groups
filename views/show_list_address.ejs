<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/header %>
    <div class="container">
      <% if(err) { %>
        <div class="card text-white bg-danger">
          <div class="card-body">
            Contact Name Invalid. Please Select Another Contact
          </div>
        </div>
        <br>
      <% } %>
      <table id='address' class="display" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>ID</th>
            <th>City</th>
            <th>Street</th>
            <th>Zipcode</th>
            <th>Contact Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (data.length > 0) { %>
            <% for (let i = 0; i < data.length; i++) { %>
            <tr>
              <td><%= data[i].id %></td>
              <td><%= data[i].street %></td>
              <td><%= data[i].city %></td>
              <td><%= data[i].zipcode %></td>
              <td><%= data[i].contact_name %></td>
              <td>
                <a href="addresses/edit/<%= data[i].id %>">Edit</a> |
                <a onclick="return confirm('Are you sure?')" href="addresses/delete/<%= data[i].id %>">Delete</a>
              </td>
            </tr>
            <% } %>
          <% } else { %>
            <tr>
              <td colspan="5">No Record Available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <br>
      <h2>Add New address</h2>
      <form action="/addresses" method="post">
        <table class="table">
          <tr>
            <td>Street</td>
            <td>:</td>
            <td><input type="text" name="street" value=""></td>
          </tr>
          <tr>
            <td>City</td>
            <td>:</td>
            <td><input type="text" name="city" value=""></td>
          <tr>
            <td>Zipcode</td>
            <td>:</td>
            <td><input type="text" name="zipcode" value=""></td>
          </tr>
          <tr>
            <td>Contact Name</td>
            <td>:</td>
            <td>
              <select name="contact">
                <option>Select Contact Name</option>
                <% for (let i = 0; i < contactData.length; i++) { %>
                  <option value="<%= contactData[i].id %>"><%= contactData[i].name %></option>
                <%}%>
              </select>
            </td>
          </tr>
          <tr>
            <td colspan="3"><input type="submit" name="submit" value="Submit"></td>
          </tr>
        </table>
      </form>
    </div>
    <% include ./partials/footer %>
    <script>
      $(document).ready(function(){
          $('#address').DataTable();
      });
    </script>
  </body>
</html>
