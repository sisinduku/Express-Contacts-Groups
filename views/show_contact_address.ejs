<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/header %>
    <div class="container">
      <h2>Contact Address</h2>
      <h3>Name: <%= contact.name %></h3>
      <table id='contactaddress' class="display" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Street</th>
            <th>City</th>
            <th>Zipcode</th>
          </tr>
        </thead>
        <tbody>
          <% if (data.length > 0) { %>
            <% for (let i = 0; i < data.length; i++) { %>
            <tr>
              <td><%= data[i].id %></td>
              <td><%= data[i].street %></td>
              <td><%= data[i].city %></td>
              <td><%= data[i].zipcode %></td>
            </tr>
            <% } %>
          <% } else { %>
            <tr>
              <td colspan="3">No Record Available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <br>
      <form action="/contacts/address/<%= contact.id %>" method="post">
        <table class="table">
          <input type="hidden" name="id" value="<%= data.id %>">
          <tr>
            <td>Street</td>
            <td>:</td>
            <td><input type="text" name="street" value=""></td>
          </tr>
          <tr>
            <td>City</td>
            <td>:</td>
            <td><input type="text" name="city" value=""></td>
          </tr>
          <tr>
            <td>Zipcode</td>
            <td>:</td>
            <td><input type="text" name="zipcode" value=""></br></td>
          </tr>
          <tr>
            <td colspan="3"><input class="btn btn-primary" type="submit" name="submit" value="Update"></td>
          </tr>
        </table>
      </form>
    </div>
    <% include ./partials/footer %>
    <script>
      $(document).ready(function(){
          $('#contactaddress').DataTable();
      });
    </script>
  </body>
</html>
