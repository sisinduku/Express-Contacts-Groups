<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/header %>
    <div class="container">
      <table id='group' class="display" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Members</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (data.length > 0) { %>
            <% for (let i = 0; i < data.length; i++) { %>
            <tr>
              <td><%= data[i].id %></td>
              <td><%= data[i].name_of_group %></td>
              <td>
                <% for (let j = 0; j < data[i].contact.length; j++) { %>
                  <%= data[i].contact[j].name%>
                  <% if (j !== data[i].contact.length - 1) { %>
                    ,
                  <% } %>
                <% } %>
              </td>
              <td>
                <a href="groups/assign/<%= data[i].id %>">Assign Contact</a> |
                <a href="groups/edit/<%= data[i].id %>">Edit</a> |
                <a onclick="return confirm('Are you sure?')" href="groups/delete/<%= data[i].id %>">Delete</a>
              </td>
            </tr>
            <% } %>
          <% } else { %>
            <tr>
              <td colspan="3">No Record Available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <br>
      <h2>Add New Group</h2>
      <form action="/groups" method="post">
        <table class="table">
          <tr>
            <td>Name</td>
            <td>:</td>
            <td><input type="text" name="name_of_group" value=""></td>
          </tr>
          <tr>
            <td colspan="3"><input type="submit" name="submit" value="Submit"></td>
          </tr>
        </table>
      </form>
    </div>
    <% include ./partials/footer %>
    <script>
      $(document).ready(function(){
          $('#group').DataTable();
      });
    </script>
  </body>
</html>
