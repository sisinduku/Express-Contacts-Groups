<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/header %>
    <div class="container">
      <% if(err) { %>
        <div class="card text-white bg-danger">
          <div class="card-body">
            Contact Name Invalid. Please Select Another Contact
          </div>
        </div>
        <br>
      <% } %>
      <table id='profile' class="display" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Contact Name</th>
            <th>Username</th>
            <th>Password</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (data.length > 0) { %>
            <% for (let i = 0; i < data.length; i++) { %>
            <tr>
              <td><%= data[i].id %></td>
              <td><%= data[i].contact_name %></td>
              <td><%= data[i].username %></td>
              <td><%= data[i].password %></td>
              <td>
                <a href="profiles/edit/<%= data[i].id %>">Edit</a> |
                <a onclick="return confirm('Are you sure?')" href="profiles/delete/<%= data[i].id %>">Delete</a>
              </td>
            </tr>
            <% } %>
          <% } else { %>
            <tr>
              <td colspan="4">No Record Available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <br>
      <h2>Add New profile</h2>
      <form action="/profiles" method="post">
        <table class="table">
          <tr>
            <td>Contact Name</td>
            <td>:</td>
            <td>
              <select name="contact">
                <option>Select Contact Name</option>
                <% for (let i = 0; i < contactData.length; i++) { %>
                  <option value="<%= contactData[i].id %>"><%= contactData[i].name %></option>
                <%}%>
              </select>
            </td>
          </tr>
          <tr>
            <td>Username</td>
            <td>:</td>
            <td><input type="text" name="username" value=""></td>
          </tr>
          <tr>
            <td>Password</td>
            <td>:</td>
            <td><input type="text" name="password" value=""></td>
          </tr>
          <tr>
            <td colspan="3"><input class="btn btn-primary" type="submit" name="submit" value="Submit"></td>
          </tr>
        </table>
      </form>
    </div>
    <% include ./partials/footer %>
    <script>
      $(document).ready(function(){
          $('#profile').DataTable();
      });
    </script>
  </body>
</html>
